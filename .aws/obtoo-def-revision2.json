{
    "family": "obtoo-def",
    "networkMode": "bridge",
    "cpu": "512",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::681689809064:role/ecsTaskExecutionRole",

    "containerDefinitions": [
        {
            "name": "obtoo",
            "image": "REPLACED_BY_GITHUB_ACTIONS",
            "cpu": 256,
            "memoryReservation": 256,
            "memory": 384,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environmentFiles": [
                {
                    "type": "s3",
                    "value": "arn:aws:s3:::otboo-bucket/prod.env"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "code=$(curl -s -o /dev/null -w \"%{http_code}\" http://localhost:8080/manage/health); [ $code -lt 500 ] || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/obtoo-def",
                    "awslogs-region": "ap-northeast-2",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            }
        }
    ],
    "requiresCompatibilities": [ "EC2" ],
    "compatibilities": [ "EC2" ],
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}